<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Perguntas">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/btn_voltar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_back_arrow" />
        <TextView
            android:id="@+id/nomeTopico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Tópico Selecionado"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_timer" />
            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="01:59"
                android:textColor="#FAA72F"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/contadorQuestoes"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/container"
        android:elevation="1dp"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="1/10"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/questao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/container_questao"
        android:gravity="center"
        android:minHeight="100dp"
        android:text="Questao"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opcao1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Opcao 1"
        android:paddingHorizontal="10dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textColor="#00bfff"
        android:background="@drawable/opcao_selecionada"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opcao2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Opcao 2"
        android:paddingHorizontal="10dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textColor="#00bfff"
        android:background="@drawable/opcao_selecionada"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opcao3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Opcao 3"
        android:paddingHorizontal="10dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textColor="#00bfff"
        android:background="@drawable/opcao_selecionada"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opcao4"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Opcao 4"
        android:paddingHorizontal="10dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textColor="#00bfff"
        android:background="@drawable/opcao_selecionada"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_prox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Próxima Quetão"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textColor="#00bfff"
        android:background="@drawable/buttom"/>
</LinearLayout>